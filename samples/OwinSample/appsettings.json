{
  "CAS": {
    "ProtocolVersion": 2,
    "ServerUrlBase": "https://cas.example.org/cas",
    "SingleLogout": false
  },
  "NLog": {
    "autoReload": true,
    "extensions": [
      {
        "assembly": "NLog.Extensions.Logging"
      },
      {
        "assembly": "NLog.Web"
      }
    ],
    "variables": {
      "LOG_PATH": "${environment:LOG_PATH:whenEmpty=${basedir:fixtempdir=true}}"
    },
    "targets": {
      "async": true,
      "debug": {
        "type": "DebugSystem"
      },
      "console": {
        "type": "ColoredConsole"
      },
      "file": {
        "type": "File",
        "fileName": "${var:LOG_PATH}/log.txt"
      }
    },
    "rules": {
      "99": {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "console"
      },
      "100": {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "file",
        "enabled": false
      }
    }
  },
  "OIDC": {
    "Authority": "https://cas.example.org/cas/oidc",
    "ClientId": "CHANGE_ME",
    "ClientSecret": "CHANGE_ME"
  }
}
